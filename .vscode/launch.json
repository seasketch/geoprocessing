      "runtimeArgs": [
          "run-script", "test:debug"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "port": 9229        
    }, {
      "name": "gp-clip-ocean - debug tests",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/packages/gp-clip-ocean",
      "runtimeArgs": [
        "--inspect-brk",
        "${workspaceRoot}/packages/gp-clip-ocean/node_modules/.bin/geoprocessing",
          "test"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "port": 9229        
    }, {
      "name": "gp-raster-stats - debug tests",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/packages/gp-raster-stats",
      "runtimeArgs": [
        "--inspect-brk",
        "${workspaceRoot}/packages/gp-raster-stats/node_modules/.bin/geoprocessing",
          "test"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "port": 9229        
    }, {
      "name": "gp-clip - debug tests",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/packages/gp-clip",
      "runtimeArgs": [
        "--inspect-brk",
        "${workspaceRoot}/packages/gp-clip/node_modules/.bin/geoprocessing",
          "test"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "port": 9229        
    }
  ],
  "inputs": [
    {
      "type": "promptString",
      "id": "testNamePattern",
      "description": "jest -t 'regex pattern to select tests'",
      "default": "name of my test"
    }
  ]
}
